<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ViewEventActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="Event Details"
            android:textAlignment="center"
            android:textColor="#dfc15e"


            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#dfc15e"
            />

        <TextView
            android:id="@+id/textfield_title_viewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginHorizontal="30dp"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#dfc15e"
            />


        <TextView
            android:id="@+id/textfield_description_viewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginHorizontal="30dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created By"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#dfc15e"
            />


        <TextView
            android:id="@+id/textfield_emailCreator_viewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created By"
            android:layout_marginHorizontal="30dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Begin Date - End date:"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#dfc15e"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
           >

            <TextView
                android:id="@+id/textfield_beginDate_viewEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Begindate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:text="-" />


            <TextView
                android:id="@+id/textfield_endDate_viewEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Enddate"

                />

        </LinearLayout>

        <Button
            android:id="@+id/button_subscribe_viewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="#dfc15e"
            android:text="Subscribe" />




    </LinearLayout>
</ScrollView>